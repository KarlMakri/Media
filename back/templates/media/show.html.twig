{% extends 'base.html.twig' %}

{% block title %}Media{% endblock %}

{% block body %}

    <div class="container">
        <h1>Media</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ medium.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ medium.type }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ medium.title }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ medium.author }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('media_index') }}" class="btn btn-info">Liste</a>
        <br><br>
        <a href="{{ path('media_edit', {'id': medium.id}) }}" class="btn btn-warning">Modifier</a>
        <br><br>
        {{ include('media/_delete_form.html.twig') }}
    </div>

{% endblock %}
