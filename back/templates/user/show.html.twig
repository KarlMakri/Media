{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

    <div class="container">
        <h1>User</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ user.pseudo }}</td>
            </tr>
            <tr>
                <th>Pwd</th>
                <td>{{ user.pwd }}</td>
            </tr>
            <tr>
                <th>Token</th>
                <td>{{ user.token }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('user_index') }}" class="btn btn-info">Liste</a><br><br>

        <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-warning">Modifier</a><br><br>

        {{ include('user/_delete_form.html.twig') }}
    </div>

{% endblock %}
